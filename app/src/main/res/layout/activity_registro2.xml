<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Registro2Activity"
        android:orientation="vertical">
<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/registro_datos"
              android:gravity="center"
              android:paddingTop="40dp"
              android:textSize="30dp"
              android:textStyle="bold"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="40dp"
                  android:layout_marginLeft="16dp"
                  android:layout_marginBottom="8dp"
                  android:layout_marginRight="30dp">

        <ImageView android:layout_width="0dp"
                   android:layout_height="41dp"
                   android:layout_weight="1"
                   android:scaleType="centerInside"
                   android:src="@drawable/usuario"/>

        <EditText android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1.5"
                  android:id="@+id/etUsername"
                  android:hint="@string/Nombre"
                  android:fontFamily="sans-serif"
                  android:inputType="textPersonName"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="16dp"
                  android:layout_marginBottom="8dp"
                  android:layout_marginRight="30dp">

        <ImageView android:layout_width="0dp"
                   android:layout_height="41dp"
                   android:layout_weight="1"
                   android:scaleType="centerInside"
                   android:src="@drawable/usuario"/>

        <EditText android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1.5"
                  android:id="@+id/etUserlast"
                  android:hint="@string/Apellido"
                  android:fontFamily="sans-serif"
                  android:inputType="textPersonName"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="16dp"
                  android:layout_marginBottom="8dp"
                  android:layout_marginRight="30dp">

        <ImageView android:layout_width="0dp"
                   android:layout_height="41dp"
                   android:layout_weight="1"
                   android:scaleType="centerInside"
                   android:src="@drawable/email"/>

        <EditText android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1.5"
                  android:id="@+id/etUseremail"
                  android:hint="@string/Correo"
                  android:fontFamily="sans-serif"
                  android:inputType="textPersonName"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="16dp"
                  android:layout_marginBottom="8dp"
                  android:layout_marginRight="30dp">

        <ImageView android:layout_width="0dp"
                   android:layout_height="41dp"
                   android:layout_weight="1"
                   android:scaleType="centerInside"
                   android:src="@drawable/cities"
                  />
        <EditText android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:id="@+id/etCiudad"
                android:hint="@string/Ciudad"
                android:fontFamily="sans-serif"
                android:inputType="textPersonName"/>

        <!--<ExpandableListView android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:id="@+id/elUsercity"
                            android:inputType="textPersonName"
                            android:dividerHeight="0.5dp"/>-->

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingTop="30dp"
                  android:gravity="center">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/iAgregarFoto"
                   android:src="@drawable/camara"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvAgregarGaleria"
                android:gravity="center"
                android:text="@string/ingresar_foto_desde_galer_a"
                android:textColor="@color/color_azul_fondo"/>


        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/bnSiguiente"
                   android:paddingTop="10dp"
                   android:src="@drawable/flecha_derecha"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>